extends layout.pug

block title
    | #{__('photography.title')} | Conor Nickerson

block css
    link(rel='stylesheet', type='text/css', href='/css/photography.css')

block content
    .container
        h1
            a(href='/photography') #{__('photography.title')}
        br
        ul.social
            li
                a.fa.fa-instagram(href='https://www.instagram.com/conornickerson/', target='_blank')
            li
                a.fa.fa-flickr(href='https://www.flickr.com/photos/125461361@N03/albums', target='_blank')
           
    section.portfolio
        a(href='/' + getLocale() + '/portfolio') #{__('photography.view_portfolio')}
           
    section.colorized
        a(href='http://conornickerson.wixsite.com/site/colorization', target='_blank') #{__('photography.colorized_history')}

    section.tan
        a(href='http://conornickerson.wixsite.com/site/then-now', target='_blank') #{__('photography.then_and_now')}

    section.contract
        a #{__('photography.coming_soon')}
